<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="FABStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">@color/color_primary</item>
        <item name="iconTint">#FFFFFF</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="EMVCardLabelStyle">
        <item name="android:fontFamily">@font/cc_regular</item>
        <item name="android:textSize">@dimen/emv_card_thumb_label_size</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="EMVCardTextStyle">
        <item name="android:fontFamily">@font/cc_regular</item>
        <item name="android:textSize">@dimen/emv_card_thumb_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="FormFieldsLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="boxBackgroundColor">@color/color_surface</item>
    </style>

    <style name="FormFieldsStyle" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/edit_text_underline</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowMinWidthMajor">60%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="InfoLabelStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.FormsPageTheme.NumberPickerStyle">
        <item name="colorControlNormal">@color/edit_text_underline</item>
    </style>
</resources>